# ========== 应用配置 ==========
APP_ENV=production
DEBUG=false
APP_SECRET=your-production-super-secret-key-change-this

# ========== 数据库配置 ==========
DATABASE_TYPE=mysql
MYSQL_HOST=mysql.production.com
MYSQL_PORT=3306
MYSQL_USER=word_graph_prod
MYSQL_PASSWORD=your-strong-production-password
MYSQL_DATABASE=word_graph_prod

# ========== Redis 配置 ==========
REDIS_HOST=redis.production.com
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your-redis-password

# ========== 第三方登录配置 ==========
WECHAT_APPID=your-production-wechat-appid
WECHAT_SECRET=your-production-wechat-secret
WECHAT_REDIRECT_URI=https://your-production-domain.com/auth/wechat/callback

QQ_APPID=your-production-qq-appid
QQ_SECRET=your-production-qq-secret
QQ_REDIRECT_URI=https://your-production-domain.com/auth/qq/callback

# ========== 其他生产环境特定配置 ==========
CACHE_TIMEOUT=1800  # 生产环境缓存时间更长
RATE_LIMIT_PER_MINUTE=30  # 生产环境限流更严格